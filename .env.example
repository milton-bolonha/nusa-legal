# App Configuration
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# Database
DATABASE_URL="file:./dev.db"

# Security Secrets (minimum 32 characters)
TOKEN_SECRET=your-secret-key-change-in-production-min-32-chars
TOKEN_EXPIRY=5
SESSION_SECRET=your-session-secret-change-in-production-min-32-chars
ALLOWED_ORIGINS=http://localhost:3001

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
VECTOR_STORE_ID=vs_your_vector_store_id_here
ASSISTANT_ID=asst_your_assistant_id_here

# Tavily Search API
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# Roblox Background Check APIs
TRELLO_API_KEY=your-trello-api-key-here
TRELLO_TOKEN=your-trello-token-here
NUSA_API_KEY=your-nusa-api-key-here

# Upstash Redis (Optional - for caching)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Sentry Error Tracking
NUXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
